<form action="/users" method="post" enctype="multipart/form-data" id="new_user">
  <p>
    <label for="user_first_name">First name</label>
    <input id="user_first_name" name="user[first_name]" type="text" />
  </p>
  <p>
    <label for="user_last_name">Last name</label>
    <input id="user_last_name" name="user[last_name]" type="text" />
  </p>
  <p>
    <label for="user_email">Email</label>
    <input id="user_email" name="user[email]" type="text" />
  </p>
  <p> 
    <label for="user_avatar">Avatar</label>
    <input id="user_avatar" name="user[avatar]" type="file" />
  </p>
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <p><input type="submit" name="commit" value="submit"></p>
</form>
