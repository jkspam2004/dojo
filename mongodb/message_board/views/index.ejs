<!DOCTYPE html>
<html lang="en">
<head>
  <title>Message Dashboard</title>

  <style>
    .comment {
      margin: 30px;
    }
  </style>
</head>
<body>
  <h2>The Dojo Message Board</h2>

  <form action="/posts" method="post">
    <p><label for="poster">Name:</label></p>
    <p><input type="text" id="poster" name="poster" /></p>
    <p><label for="message">Message:</label></p>
    <p><textarea id="message" name="message"></textarea></p>
    <p><button type="submit">Post message</button></p>
  </form>

  <% if (posts.length) { %>
    <% for (var i=0; i<posts.length; i++) { %>
      <p>id: <%= posts[i].id %></p>
      <p>Name: <%= posts[i].name %></p>
      <p>Message: <%= posts[i].text %></p>
      <% for (var j=0; j<posts[i].comments.length; j++) { %>
        <p class="comment">Name: <%= posts[i].comments[j].name %></p>
        <p class="comment">Comment: <%= posts[i].comments[j].text %></p>
      <% } %>
      <form id="addcomment" action="/posts/<%= posts[i].id %>" method="post">
        <p class="comment">
          <label for="commenter">Name:</label>
          <input type="text" id="commenter" name="commenter" />
        </p>
        <p class="comment">
          <label for="comment">Comment:</label>
          <textarea id="comment" name="comment"></textarea>
        </p>
        <p class="comment"><button type="submit">Post comment</button></p>
      </form>
    <% } %>
  
  <% } %>

</body>
</html>
